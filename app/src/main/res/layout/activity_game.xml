<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gamepage">

    <!-- Back button -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/transparent"
        android:contentDescription="Back"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_backgreen" />

    <!-- Level One button -->
    <ImageButton
        android:id="@+id/btn_level_one"
        android:layout_width="93dp"
        android:layout_height="122dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="57dp"
        android:layout_marginTop="246dp"
        android:background="@android:color/transparent"
        android:contentDescription="LevelOne"
        android:scaleType="fitXY"
        android:src="@drawable/levelonebutton" />

    <!-- Level Two button -->
    <ImageButton
        android:id="@+id/btn_level_two"
        android:layout_width="96dp"
        android:layout_height="125dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="242dp"
        android:layout_marginEnd="57dp"
        android:background="@android:color/transparent"
        android:contentDescription="LevelTwo"
        android:scaleType="fitXY"
        android:src="@drawable/leveltwobutton" />

</RelativeLayout>
