<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homepage"
    tools:context=".activities.MainActivity">

    <!-- Bottom buttons container -->
    <LinearLayout
        android:id="@+id/buttonGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="24dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!-- Bestiary button -->
        <ImageButton
            android:id="@+id/btnBestiary"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/button_background_selector"
            android:contentDescription="@string/bestiary"
            android:scaleType="fitCenter"
            android:src="@drawable/bestiarybutton"
            app:tint="@null" />

        <!-- Map button -->
        <ImageButton
            android:id="@+id/btnMap"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/button_background_selector"
            android:contentDescription="@string/map"
            android:scaleType="fitCenter"
            android:src="@drawable/mapbutton"
            app:tint="@null" />

        <!-- Steps button -->
        <ImageButton
            android:id="@+id/btnStep"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/button_background_selector"
            android:contentDescription="@string/step"
            android:scaleType="fitCenter"
            android:src="@drawable/stepsbutton"
            app:tint="@null" />

        <!-- Game button -->
        <ImageButton
            android:id="@+id/btnGame"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="0dp"
            android:background="@drawable/button_background_selector"
            android:contentDescription="@string/game"
            android:scaleType="fitCenter"
            android:src="@drawable/gamebutton"
            app:tint="@null" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="283dp"
        android:layout_alignBottom="@+id/buttonGroup"
        android:layout_marginTop="260dp"
        android:layout_marginBottom="126dp"
        android:gravity="center"
        android:orientation="vertical">

        <!-- Image view -->
        <ImageView
            android:id="@+id/mainImage"
            android:layout_width="249dp"
            android:layout_height="268dp"
            android:layout_gravity="center"
            android:background="#00FFFFFF"
            android:contentDescription="@string/current_selected_creature"
            android:longClickable="true"
            android:scaleType="fitXY" />
    </LinearLayout>

    <!-- Top-right buttons container -->
    <LinearLayout
        android:id="@+id/topRightButtonGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        android:gravity="end">

        <!-- Select beast button -->
        <ImageButton
            android:id="@+id/selectBeastButton"
            android:layout_width="match_parent"
            android:layout_height="71dp"
            android:layout_marginBottom="16dp"
            android:background="@null"
            android:contentDescription="@string/choose_creature"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/choose_beast_button"
            app:tint="@null" />

        <!-- Guide button -->
        <ImageButton
            android:id="@+id/btnGuide"
            android:layout_width="64dp"
            android:layout_height="53dp"
            android:background="@null"
            android:contentDescription="@string/game_guide"
            android:layout_marginBottom="16dp"
            android:scaleType="fitCenter"
            android:src="@drawable/guidebutton"
            app:tint="@null" />

        <!-- Logout button -->
        <ImageButton
            android:id="@+id/btnLogout"
            android:layout_width="64dp"
            android:layout_height="53dp"
            android:background="@null"
            android:contentDescription="@string/logout"
            android:scaleType="fitCenter"
            android:src="@drawable/logout"
            app:tint="@null" />
    </LinearLayout>


</RelativeLayout>