<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/levelpage">

    <!-- 返回按钮 -->
    <ImageButton
        android:id="@+id/btnBackGamePage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/transparent"
        android:contentDescription="Back"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_backgreen" />

    <!-- 开始游戏按钮 -->
    <Button
        android:id="@+id/btnStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="168dp"
        android:layout_marginTop="322dp"
        android:layout_marginEnd="144dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:shadowColor="#55000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:elevation="6dp"
        android:background="@drawable/main_button"
        android:text="Start" />

    <!-- 倒计时 -->
    <TextView
        android:id="@+id/tvTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="168dp"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="155dp"
        android:text="Time: 13s"
        android:textColor="#FFEB3B"
        android:textSize="20sp" />

    <!-- 得分显示 -->
    <TextView
        android:id="@+id/tvScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="148dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="132dp"
        android:shadowColor="#CCCCCC"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:text="Score: 0/10"
        android:textColor="#FFFFFF"
        android:textSize="25sp" />

    <!-- 目标灵兽图标（默认隐藏） -->
    <ImageView
        android:id="@+id/target"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/beastlocked"
        android:visibility="invisible"/>
</RelativeLayout>
