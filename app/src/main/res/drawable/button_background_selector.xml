<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="#40000000"/> <!-- Semi-transparent black -->
            <stroke android:width="1dp" android:color="#80FFFFFF"/> <!-- White border -->
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#00000000"/> <!-- Fully transparent -->
        </shape>
    </item>
</selector>