<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 按下状态 -->
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="#40000000"/> <!-- 半透明黑色 -->
            <stroke android:width="1dp" android:color="#80FFFFFF"/> <!-- 白色边框 -->
        </shape>
    </item>

    <!-- 默认状态 -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#00000000"/> <!-- 完全透明 -->
        </shape>
    </item>
</selector>